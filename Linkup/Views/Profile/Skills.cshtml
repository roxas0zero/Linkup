@model Linkup.ViewModels.Profile.ProfileSkillsViewModel

<h2>Skills</h2>

<hr />

<div class="row my-5">
    <div class="col-md-12">
        <form method="post" asp-action="AddSkill" class="form-inline">
            <div class="form-group mr-4">
                <select class="form-control select2" asp-for="SelectedSkill" asp-items="Model.Skills"></select>
                <span asp-validation-for="SelectedSkill" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Add Skill</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-responsive">
            <thead class="thead-light">
                <tr>
                    <th colspan="2">
                        My Skills
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CurrentSkills)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Skill)
                        </td>
                        <td>
                            <form method="post" asp-action="DeleteSkill" class="ml-5">
                                <input type="hidden" asp-for="SelectedSkill" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm float-right">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}

