@model Linkup.ViewModels.Project.ProjectCreateViewModel

<h2>Add Initiative Details</h2>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-6">

        <div class="row my-5">
            <div class="col-md-12">
                <form method="post" asp-action="AddSkill" class="form-inline">
                    <div class="form-group mr-4">
                        <input type="hidden" asp-for="ProjectId" />
                        <select class="form-control" asp-for="SelectedSkill" asp-items="Model.SkillsList"></select>
                        <span asp-validation-for="SelectedSkill" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Add Skill</button>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-responsive">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="2">
                                Needed Skills
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.NeededSkills)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Skill)
                                </td>
                                <td>
                                    <form method="post" asp-action="DeleteSkill" class="ml-5">
                                        <input type="hidden" asp-for="ProjectId" />
                                        <input type="hidden" asp-for="SelectedSkill" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm float-right">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-6">

        <div class="row my-5">
            <div class="col-md-12">
                <form method="post" asp-action="AddInterest" class="form-inline">
                    <div class="form-group mr-4">
                        <input type="hidden" asp-for="ProjectId" />
                        <select class="form-control" asp-for="SelectedInterest" asp-items="Model.InterestList"></select>
                        <span asp-validation-for="SelectedInterest" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Add Interest</button>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-responsive">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="2">
                                Related Interests
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RelatedInterests)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Interest)
                                </td>
                                <td>
                                    <form method="post" asp-action="DeleteInterest" class="ml-5">
                                        <input type="hidden" asp-for="ProjectId" />
                                        <input type="hidden" asp-for="SelectedInterest" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm float-right">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-warning">Finish</a>
</div>